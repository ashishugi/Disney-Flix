<%- include('./components/adminNavbar.ejs') %>
<div class="user-details">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                    <table class="table">
                            <thead  class="thead-dark">
                              <tr>
                                <th scope="col">#S.No</th>
                                <th scope="col">Video Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Genres</th>
                                <th scope="col">Prime Member</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Remove</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% var count =1;%>
                                <% data.forEach(function(item){%>
                                    <tr>
                                        <td><%= count %></td>
                                        <td><%= item.movieName %> </td>
                                        <td><%= item.category %></td>
                                        <td><%= item.genre %></td>
                                        <td><%= item.isPrime %></td>
                                        <td><a class="btn btn-outline-success" data-toggle="modal" data-target="#edit<%=item.id%>"><i class="far fa-edit"></i></a></td>
                                        <td><a class="btn btn-outline-danger" href="/admin/delVideo/<%=item._id%>"><i class="far fa-trash-alt"></i></a></td>
                                        <%- include('./components/adminEditModal.ejs',{item:item}) %>
                                    </tr>
                                    <%count+=1;%>
                                <%}); %>
                            </tbody>
                    </table>
            </div>
        </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
